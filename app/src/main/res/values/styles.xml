<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorDarkOrange</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Removing actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSurface">@color/colorLightOrange</item>
        <item name="colorOnSurface">@color/colorLightGray</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>

    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/colorLightOrange</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>

    </style>

    <style name="FloatButtonTheme" parent="Widget.Design.FloatingActionButton">
      <item name="backgroundTint">@color/colorDarkOrange</item>
        <item name="tint">@color/colorLightGray</item>
    </style>

    <style name="NavigationTheme" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:colorBackground">@color/colorLightOrange</item>
        <item name="colorBackgroundFloating">@color/colorLightOrange</item>
        <item name="colorOnBackground">@color/colorLightOrange</item>
        <item name="colorOnSurface">@color/colorLightOrange</item>
        <item name="colorPrimary">@color/colorLightOrange</item>
        <item name="colorAccent">@color/colorLightOrange</item>
        <item name="colorPrimarySurface">@color/colorLightOrange</item>
        <item name="color">@color/colorLightOrange</item>




    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

</resources>